.mask-bg {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  z-index: 1;
  background-color: rgba(0, 0, 0, 0.6);
}
.mask-content {
  position: fixed;
  left: 50%;
  top: 46%;
  z-index: 2;
  margin: -420rpx 0 0 -250rpx;
  width: 500rpx;
  height: 725rpx;
}
.mask-content .popup-close {
  position: absolute;
  bottom: -100rpx;
  left: 50%;
  width: 64rpx;
  height: 64rpx;
  margin-left: -32rpx;
}
.mask-content .main-text {
  position: absolute;
  top: 280rpx;
  left: 50rpx;
  right: 50rpx;
  color: #fff;
  font-size: 12px;
  text-align: center;
}
.mask-content .main-text .title {
  font: bold 20px/80rpx '宋体', Arial;
}
.mask-content .main-text .sign-time {
  font-size: 12px;
  line-height: 60rpx;
}
.mask-content .main-text .start-time {
  margin-top: 180rpx;
  color: #323232;
}

